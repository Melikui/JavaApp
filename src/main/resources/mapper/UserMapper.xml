<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.today.App.mapper.UserMapper">

    <select id="list" resultType="com.today.App.entity.User">
        SELECT * FROM user
