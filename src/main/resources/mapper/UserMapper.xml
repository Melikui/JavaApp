    </select>
    <insert id="addUser">
        INSERT INTO user(name, age)
        VALUES (#{name}, #{age})
    </insert>

    <update id="updateUser">
        UPDATE user
        SET name = #{name},
            age = #{age}
        WHERE id = #{id}
    </update>

    <delete id="deleteUser">
        DELETE
        FROM user
        WHERE id = #{id}
    </delete>

</mapper>

