<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.today.App.mapper.TodoMapper">

    <select id="todoList" resultType="com.today.App.model.Todo">
        SELECT *
        FROM todo
    </select>

    <insert id="addTodo" parameterType="com.today.App.model.Todo">
        INSERT INTO todo(title, content)
        VALUES (#{title}, #{content})
    </insert>

    <update id="updateTodo">
        UPDATE todo
        SET title   = #{title},
            content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="deleteTodo">
        DELETE
        FROM todo
        WHERE id = #{id}
    </delete>

</mapper>

